<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Itenet.Views.MainPage">


        <CollectionView ItemsSource="{Binding Noticias}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10,5,10,5" BackgroundColor="{StaticResource White}" MinimumHeightRequest="180">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer  Tapped="onNoticiaTapped" />
                    </Border.GestureRecognizers>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="5" />
                    </Border.StrokeShape>
                        <Label Margin="5" Text="{Binding titulo}" TextColor="{StaticResource Black}" FontAttributes="Bold"/>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

</ContentPage>
